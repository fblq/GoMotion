<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              android:background="#00ff">


    <fragment
            android:id="@+id/assessFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            class="com.campus.gomotion.fragment.EvaluateFragment"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completion"/>
            <TextView
                    android:id="@+id/completion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selfEvaluation"/>
            <TextView
                    android:id="@+id/selfEvaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
